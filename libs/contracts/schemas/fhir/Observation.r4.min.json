{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "Observation.r4.min.json",
    "type": "object",
    "required": [
        "resourceType",
        "status",
        "code",
        "subject",
        "effectiveDateTime",
        "valueQuantity"
    ],
    "properties": {
        "resourceType": {
            "const": "Observation"
        },
        "status": {
            "enum": [
                "final",
                "amended",
                "corrected",
                "preliminary"
            ]
        },
        "code": {
            "type": "object",
            "required": [
                "coding"
            ],
            "properties": {
                "coding": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": [
                            "system",
                            "code"
                        ],
                        "properties": {
                            "system": {
                                "type": "string"
                            },
                            "code": {
                                "type": "string"
                            },
                            "display": {
                                "type": "string"
                            }
                        },
                        "additionalProperties": true
                    }
                }
            },
            "additionalProperties": true
        },
        "subject": {
            "type": "object",
            "required": [
                "reference"
            ],
            "properties": {
                "reference": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "effectiveDateTime": {
            "type": "string",
            "format": "date-time"
        },
        "valueQuantity": {
            "type": "object",
            "required": [
                "value",
                "unit"
            ],
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                },
                "system": {
                    "type": "string"
                },
                "code": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}