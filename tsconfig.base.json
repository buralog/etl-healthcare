{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@contracts/*": ["libs/contracts/src/*"],
      "@adapters/*": ["libs/adapters/src/*"],
      "@ports/*": ["libs/ports/src/*"],
      "@storage-ddb/*": ["libs/storage-ddb/src/*"],
      "@validation/*": ["libs/validation/src/*"],
      "@obs/*": ["libs/obs/src/*"]
    }
  }
}
