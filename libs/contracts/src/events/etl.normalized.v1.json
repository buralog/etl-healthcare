{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "etl.normalized.v1",
  "type": "object",
  "required": ["type", "tenantId", "ingestId", "objects", "traceId"],
  "properties": {
    "type": { "const": "etl.normalized.v1" },
    "tenantId": { "type": "string" },
    "ingestId": { "type": "string" },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["kind", "schemaVersion", "payload"],
        "properties": {
          "kind": { "enum": ["patient", "observation"] },
          "schemaVersion": { "type": "integer", "minimum": 1 },
          "payload": { "type": "object" }
        },
        "additionalProperties": false
      }
    },
    "traceId": { "type": "string" }
  },
  "additionalProperties": false
}
