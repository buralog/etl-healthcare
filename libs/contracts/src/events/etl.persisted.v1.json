{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "etl.persisted.v1",
  "type": "object",
  "required": ["type", "tenantId", "persisted", "traceId"],
  "properties": {
    "type": { "const": "etl.persisted.v1" },
    "tenantId": { "type": "string" },
    "persisted": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["entity", "id"],
        "properties": {
          "entity": { "enum": ["Patient", "Observation", "Encounter"] },
          "id": { "type": "string" },
          "version": { "type": "integer" },
          "code": { "type": "string" },
          "effectiveDateTime": { "type": "string", "format": "date-time" }
        },
        "additionalProperties": false
      }
    },
    "traceId": { "type": "string" }
  },
  "additionalProperties": false
}
